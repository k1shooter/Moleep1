<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.moleep1.ui.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <LinearLayout
            android:id="@+id/opbuttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end|top"
            android:padding="0dp"
            android:layout_marginTop="-10dp"
            android:background="@android:color/transparent"
            android:gravity="end">

            <!-- 색상 버튼 예시 -->
            <ImageButton
                android:id="@+id/btnClear"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/del"
                android:layout_gravity="center|top"
                android:layout_margin="8dp"/>

            <ImageButton
                android:id="@+id/btnSave"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/sav"
                android:layout_gravity="center|top"
                android:layout_margin="8dp"/>

            <ImageButton
                android:id="@+id/btnAddText"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/ttt"
                android:layout_gravity="center|top"
                android:layout_margin="8dp"/>

            <ImageButton
                android:id="@+id/btnAddGallery"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/gall"
                android:layout_gravity="center|top"
                android:layout_margin="8dp"/>

            <ImageButton
                android:id="@+id/btnOpenSidebar"
                android:layout_width="65dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:src="@drawable/peos"
                android:layout_gravity="center|top"
                android:layout_margin="8dp"/>

        </LinearLayout>







        <!-- 오른쪽 아래 정렬된 버튼들 -->
        <LinearLayout
            android:id="@+id/buttonPanel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end|bottom"
            android:padding="16dp"
            android:layout_marginBottom="50dp"
            android:background="@android:color/transparent"
            android:gravity="end">

            <!-- 색상 버튼 예시 -->
            <Button
                android:id="@+id/btnColorRed"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#FF0000"
                android:text=""
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>


            <Button
                android:id="@+id/btnColorBlue"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#2196F3"
                android:text=""
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <Button
                android:id="@+id/btnColorBlack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@android:color/black"
                android:text=""
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <!-- 지우개 버튼 -->
            <Button
                android:id="@+id/btnEraser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#EEEEEE"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"/>

            <Button
                android:id="@+id/btnPanMode"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#EEEEEE"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="@string/D"
                android:background="@color/black"/>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginBottom="50dp">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>

